<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <LinearLayout
        style="@style/MainTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/weather"
            android:textSize="45sp"
            android:textColor="#CAC4B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/cloudy"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#CAC4B0"
                android:textSize="25sp"
                />




        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/spb"
            android:textColor="#CAC4B0"
            android:textSize="25sp"
            android:layout_marginBottom="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#5B2680">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#963FD5"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#A767D5"
                android:layout_marginRight="3dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/wind"/>
                <TextView
                    android:id="@+id/textViewWindFLow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#CAC4B0"
                    android:textSize="30sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#A767D5"
                android:layout_marginRight="3dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/drop"/>
                <TextView
                    android:id="@+id/textViewHumidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#CAC4B0"
                    android:textSize="30sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#A767D5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/barometer"/>
                <TextView
                    android:id="@+id/textViewCloudy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#CAC4B0"
                    android:textSize="30sp"/>

            </LinearLayout>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#963FD5"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#A767D5"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/monday"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>
                    <ImageView
                        android:id="@+id/daymonday"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/cloudy"/>
                    <TextView
                        android:id="@+id/textViewTempPN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/_25"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#A767D5"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/tuesday"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>
                    <ImageView
                        android:id="@+id/daytuesday"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/cloudy"/>
                    <TextView
                        android:id="@+id/textViewTempVT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/_25"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#A767D5"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/wednesday"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>
                    <ImageView
                        android:id="@+id/daywednesday"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/rain"/>
                    <TextView
                        android:id="@+id/textViewTempSR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/_29"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#A767D5"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/th"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>
                    <ImageView
                        android:id="@+id/daythursday"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/cloudy"/>
                    <TextView
                        android:id="@+id/textViewTempCT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/_19"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#A767D5"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/pt"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>
                    <ImageView
                        android:id="@+id/dayfriday"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/rain"/>
                    <TextView
                        android:id="@+id/textViewTempPT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/_25"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#A767D5"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/saturday"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>
                    <ImageView
                        android:id="@+id/daysaturday"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/cloudy"/>
                    <TextView
                        android:id="@+id/textViewTempSB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/_33"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#A767D5"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/sunday"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>
                    <ImageView
                        android:id="@+id/daysunday"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/rain"/>
                    <TextView
                        android:id="@+id/textViewTempVS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/_25"
                        android:textColor="#CAC4B0"
                        android:textSize="30sp"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>